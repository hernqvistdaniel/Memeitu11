<div class="mt-3 mb-2 col-md-12 justify-content-center row">
  <h4>Rooms:</h4>
</div>


<div class="mb-3 col-md-12 justify-content-center row">
  <ul class="list-group col-md-4">
    {{#each rooms as |room|}}

    <a href="/rooms/{{room.id}}">
      <li class="list-group-item d-flex justify-content-center align-items-center mb-2">
        <span><b>{{room.topic}}</b></span>
      </li>
    </a>

    {{/each}}
  </ul>
</div>

<div class="justify-content-center col-md-12 row">
  <b>
    <p class="mt-2">Or create a new one <u><a href="/rooms/new">here!</a></u></p>
  </b>
</div>

<div class="justify-content-center col-md-12 row">
  <h4 class="mt-2 mb-2">Top Posts:</h4>
</div>

<div class="col-md-12 justify-content-center row">
  <ul class="list-group col-md-4">
    {{#each posts as |post|}}

    <a href="/rooms/{{room.id}}/posts/show/{{post.id}}">
      <li class="list-group-item d-flex justify-content-between align-items-center mb-2">
        <p><b>{{post.subject}}</b> <i> - by: {{post.author}}</i></p>
        <span class="badge badge-primary badge-pill">{{post.points}}</span>
      </li>
    </a>
    
    {{/each}}
  </ul>
</div>