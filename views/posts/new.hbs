<div>
  <form action="/rooms/{{room.id}}/posts" method="post">
    <legend>New Post</legend>

    <div class="form-group">
      <label for="post-subject">Subject:</label>
      <input type="text" name="subject" class="form-control" id="post-subject">
    </div>

    <div class="form-group">
      <label for="post-body">Body:</label>
      <textarea type="textarea" name="body" class="form-control" id="post-body exampleFormControlTextarea3" rows="5"></textarea>
    </div>

    <div class="form-group">
      <label for="post-body">Picture-link:</label>
      <input type="text" name="img" class="form-control" id="post-img">
    </div>

    <div class="form-group">
      <label for="post-body">Link:</label>
      <input type="text" name="link" class="form-control" id="post-link">
    </div>

    <div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>