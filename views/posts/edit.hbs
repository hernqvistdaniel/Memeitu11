<div>
  <form action="/posts/{{post.id}}/edit" method="post" class="snyggForm">
    <legend>Edit Post</legend>

    <div class="form-group">
      <label for="post-subject">Subject:</label>
      <input type="text" autofocus="autofocus" name="subject" value="{{post.subject}}" class="form-control" id="post-subject">
    </div>

    <div class="form-group">
      <label for="post-body">Body:</label>
      <textarea type="textarea" name="body" class="form-control" id="post-body exampleFormControlTextarea3" rows="5">{{post.body}}</textarea>
    </div>

    <div class="form-group">
      <label for="post-body">Picture-link:</label>
      <input type="text" name="img" value="{{post.img}}" class="form-control" id="post-img">
    </div>

    <div class="form-group">
      <label for="post-body">Link:</label>
      <input type="text" name="link" value="{{post.link}}" class="form-control" id="post-link">
    </div>

    <div>
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
  </form>
</div>